
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Create", "Empresa", FormMethod.Post, new { id = "form" }))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Cadastrar Empresas para Atendimento de Relato</h2>

                </header>
                <div id="vEmpresa" class="card-body" data-loading-overlay>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Empresa órgão público<span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" name="Empresa" class="form-control" placeholder="eg.: Empresa órgão público" maxlength="60"
                                   title="Por favor informe a empresa órgão público" required />
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">CPNJ <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" id="cnpj" name="cnpj" class="form-control" data-input-mask="99.999.999/9999-99"
                                   v-model="params.cnpj"
                                   v-on:blur="ExisteCnpj"
                                   placeholder="eg.: CNPJ da empresa / órgão público" maxlength="18"
                                   required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Telefone <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input name="Telefone" id="Telefone" data-plugin-masked-input=""
                                       style="z-index: auto;"
                                       data-input-mask="(99) 9999-9999"
                                       placeholder="eg.: Telefone da empresa"
                                       Title="Por favor informe o telefone da empresa"
                                       class="form-control"required>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                            <button type="reset" class="btn btn-danger pull-left mr-2">Cancelar &nbsp;&nbsp;<i class="fa fa-remove"></i></button>
                            <a href="@Url.Action("Index", "Empresa")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>
