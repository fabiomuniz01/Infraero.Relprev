
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <form id="form1" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Empresas /Órgão Públicos</h2>
                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">&nbsp;</label>

                        <div class="col-sm-1">
                            <div class="radio-custom">
                                <input type="radio" id="radioExample1" name="radioExample">
                                <label for="radioExample1">CNPJ</label>
                            </div>

                            <div class="radio-custom radio-primary">
                                <input type="radio" id="radioExample2" name="radioExample">
                                <label for="radioExample2">Empresa</label>
                            </div>

                        </div>
                        <div class="col-sm-8">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="button">Pesquisar <i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-2 pull-right">

                            <a href="@Url.Action("Create", "Empresa")" id="addToTable" class="btn btn-primary pull-right">Nova Empresa <i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th>Nome da empresa/ Órgão Público</th>
                                <th>Telefone</th>
                                <th>Unidade de infraestrutura</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>BInnovation</td>
                                <td>(61)9999-9999</td>
                                <td>5</td>
                                <td class="actions">
                                    <a  asp-action="Link" asp-controller="Empresa" asp-route-Empid="2" class="on-default link-row"><i class="fa fa-link"></i></a>
                                    <a asp-action="Edit" asp-controller="Empresa" asp-route-Empid="2" class="on-default edit-row" style='color:#eea236'><i class="fa fa-pencil"></i></a>
                                    <a href="#modalIcon" class="modal-basic on-default remove-row" style='color:#d43f3a'><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>NtitSolutions</td>
                                <td>(61)9999-9999</td>
                                <td>5</td>
                                <td class="actions">
                                    <a  asp-action="Link" asp-controller="Empresa" asp-route-Empid="2" class="on-default link-row"><i class="fa fa-link"></i></a>
                                    <a asp-action="Edit" asp-controller="Empresa" asp-route-Empid="2" class="on-default edit-row" style='color:#eea236'><i class="fa fa-pencil"></i></a>
                                    <a href="#modalIcon" class="modal-basic on-default remove-row" style='color:#d43f3a'><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>Amcom</td>
                                <td>(61)9999-9999</td>
                                <td>5</td>
                                <td class="actions">
                                    <a  asp-action="Link" asp-controller="Empresa" asp-route-Empid="2" class="on-default link-row"><i class="fa fa-link"></i></a>
                                    <a asp-action="Edit" asp-controller="Empresa" asp-route-Empid="2" class="on-default edit-row" style='color:#eea236'><i class="fa fa-pencil"></i></a>
                                    <a href="#modalIcon" class="modal-basic on-default remove-row" style='color:#d43f3a'><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </form>
    </div>
</div>
<div id="modalIcon" class="modal-block modal-header-color modal-block-danger mfp-hide">
    <section class="card">
        <header class="card-header">
            <h2 class="card-title">Exclusão</h2>
        </header>
        <div class="card-body">
            <div class="modal-wrapper">
                <div class="modal-icon">
                    <i class="fa fa-question-circle"></i>
                </div>
                <div class="modal-text">
                    <p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
                </div>
            </div>
        </div>
        <footer class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm">Sim &nbsp;&nbsp;<i class="fa fa-thumbs-o-up"></i></button>
                    <button class="btn btn-danger modal-dismiss">Não &nbsp;&nbsp;<i class="fa fa-thumbs-o-down"></i></button>
                </div>
            </div>
        </footer>
    </section>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
    <script src="~/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/Buttons-1.4.2/js/dataTables.buttons.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.bootstrap4.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.html5.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.print.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/JSZip-2.5.0//jszip.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/pdfmake-0.1.32/pdfmake.min.js"></script>
    <script src="~/vendor/datatables/extras/TableTools/pdfmake-0.1.32/vfs_fonts.js"></script>
    <script src="~/js/empresa.js"></script>
}
