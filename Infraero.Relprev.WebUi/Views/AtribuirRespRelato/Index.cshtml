@using Microsoft.AspNetCore.Authorization
@model Infraero.Relprev.CrossCutting.Models.AtribuirRespRelatoModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Index", "AtribuirRespRelato", FormMethod.Post, new { id = "form" }))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Atribuir Responsável Técnico</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Nº do relato </label>
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input type="hidden" id="CodRelato" name="CodRelato" value="@Model.Relato.CodRelato">
                                <input readonly id="CodNumRelato" name="CodNumRelato" value=" @Model.Relato.NumRelato" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Unidade de Infraestrutura<span class="required">*</span></label>

                        <div class="col-lg-9">
                            <input readonly id="DscUnidadeInfraestrutura" name="DscUnidadeInfraestrutura"
                                   placeholder="eg.: Unidade Infraestrutura"
                                   class="form-control"
                                   value="@Model.Relato.UnidadeInfraestrutura.NomUnidadeÌnfraestrutura">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Data da ocorrência</label>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                <input readonly id="DtOcorrencia" name="DtOcorrencia"
                                       data-plugin-masked-input data-input-mask="99/99/9999"
                                       placeholder="eg.: Data da ocorrência de prevenção"
                                       class="form-control"
                                       value="@Model.Relato.DatOcorrencia">
                            </div>
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">Hora da Ocorrência</label>
                        <div class="col-lg-3 pull-left">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </span>
                                <input readonly type="text"
                                       id="HorOcorrencia" name="HorOcorrencia"
                                       data-plugin-timepicker class="form-control"
                                       data-plugin-options='{ "showMeridian": false }'
                                       placeholder="eg.: Horário da ocorrência"
                                       value="@Model.Relato.HorOcorrencia">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da Ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly type="text" rows="3"
                                      name="DscLocalOcorrenciaRelator"
                                      class="form-control"
                                      placeholder="eg.: Nome do Local da Ocorrência do relato  "
                                      required
                                      maxlength="200">@Model.Relato.DscLocalOcorrenciaRelator</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição da ocorrência/Nova descrição <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly
                                      name="DscEnvolvidosOcorrencia"
                                      type="text" rows="3"
                                      class="form-control"
                                      placeholder="eg.: Pessoas e / ou veículos envolvidos no relato"
                                      required
                                      maxlength="500">@Model.Relato.DscOcorrenciaRelator</textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <h4 class="pt-3 mb-0">Classificação</h4>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscLocal" name="DscLocal"
                                   placeholder="eg.: Local da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.Local.DscLocal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Local de ocorrência   <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscSubLocal" name="DscSubLocal"
                                   placeholder="eg.: Sub Local da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.SubLocal.DscSubLocal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Assunto <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsAssunto" name="DsAssunto"
                                   placeholder="eg.: Assunto da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.Assunto.DscAssunto">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Assunto<span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsSubAssunto" name="DsSubAssunto"
                                   placeholder="eg.: Sub Assunto da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.SubAssunto.DscSubAssunto">
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Empresa de atendimento<span class="required">*</span></label>
                        <div class="col-lg-7">
                            <select class="form-control populate select2" name="ddlEmpresa" id="ddlEmpresa"
                                    title="Por favor selecione uma empresa." required
                                    asp-for="CodEmpresa" asp-items="Model.ListEmpresa">
                                <option value="">Selecionar Empresa</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Responsável Técnico<span class="required">*</span></label>
                        <div class="col-lg-7">
                            @*@if ((await AuthorizationService.AuthorizeAsync(User, new string[] { UserRoles.Administrator, UserRoles.GestorSgsoSite }, requirement)).Succeeded)
                                {
                                    <select class="form-control populate select2" name="ddlResponsavelTecnico" id="ddlResponsavelTecnico"
                                            title="Por favor selecione uma empresa." required multiple
                                            asp-for="CodResponsavel" asp-items="Model.ListResponsavel">
                                        <option value="">Selecionar Responsável técnico</option>
                                    </select>
                                }
                                else
                                {

                                }*@
                            <select class="form-control populate select2" id="ddlResponsavelTecnico"
                                    name="ddlResponsavelTecnico[]" multiple="multiple"
                                    title="Por favor selecione um responsável." required
                                    asp-for="CodResponsavel"
                                    asp-items="Model.ListResponsavel">
                                <option value="">Selecionar um responsável</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <button class="btn  btn-primary pull-left mr-2" form="form" type="submit" id="adicionar" >Adicionar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                        </div>
                        <input type="hidden" id="ListCodResponsavel" name="ListCodResponsavel">
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <table id="datatable-default" name="datatable-default" class="table table-responsive-md table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>Empresa de atendimento</th>
                                        <th>Responsável técnico</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.ListResponsavelTecnico)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ResponsavelTecnico.DscEmpresa)@*@item.ResponsavelTecnico.CodEmpresa*@</td>
                                        <td>@Html.DisplayFor(modelItem => item.ResponsavelTecnico.NomResponsavelTecnico)</td>
                                        <td class="actions">
                                            <a data-toggle="tooltip" data-placement="top" title="Remover" asp-action="Delete" asp-controller="AtribuirRespRelato"
                                               asp-route-idRelato="@Model.Relato.CodRelato" asp-route-idEmpresa="0"
                                               asp-route-idResponsavel="@item.ResponsavelTecnico.CodResponsavelTecnico" class="on-default remove-row" style="color: #d43f3a">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </table>

                        </div>
                    </div>

                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <a href="@Url.Action("Enviar", "AtribuirRespRelato", new {id = Model.Relato.CodRelato} )" class="btn  btn-success pull-left mr-2">Enviar &nbsp;&nbsp;<i class="fa fa-paper-plane"></i></a>
                            <a href="@Url.Action("Index", "Relato")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>

@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
    <script src="~/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/vendor/select2/js/select2.js"></script>
    <script src="~/js/atribuir.js"></script>

    <script>
        // Tooltip
        (function ($) {

            'use strict';

            if ($.isFunction($.fn['tooltip'])) {
                $('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
            }



        }).apply(this, [jQuery]);



    </script>
    <script>
        /*
Name: 			UI Elements / Modals - Examples
Written by: 	Okler Themes - (http://www.okler.net)
Theme Version: 	2.0.0
*/

        (function ($) {

            'use strict';

            var crud = @ViewBag.CrudMessage;

            if (crud===1) {
                new PNotify({
                    title: 'Atribuição',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            }else if (crud === 2) {
                new PNotify({
                    title: 'Atribuição',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            }else if (crud === 3) {
                new PNotify({
                    title: 'Atribuição',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify===0) {
                new PNotify({
                    title: 'Atribuição',
                    text: messagem,
                    type: 'success'
                });
            }else if (notify === 1) {
                new PNotify({
                    title: 'Atribuição',
                    text: messagem,
                    type: 'warning'
                });
            }else if (notify === 2) {
                new PNotify({
                    title: 'Atribuição',
                    text: messagem,
                    type: 'error'
                });
            }

            //Tooltip
            if ($.isFunction($.fn['tooltip'])) {
                $('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
            }


        }).apply(this, [jQuery]);

    </script>
}




