@using System.Security.Claims
@using Infraero.Relprev.Infrastructure.Identity
@using Infraero.Relprev.WebUi.Services
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Infraero.Relprev.CrossCutting.Models.RelatoModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Create", "AtribuirRespRelato", FormMethod.Post, new { id = "form" }))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Atribuir Responsável Técnico</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Nº do relato </label>
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input readonly id="CodNumRelato" name="CodNumRelato" value=" @Model.Relato.NumRelato" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Unidade de Infraestrutura<span class="required">*</span></label>

                        <div class="col-lg-9">
                            <input readonly id="DscUnidadeInfraestrutura" name="DscUnidadeInfraestrutura"
                                   placeholder="eg.: Unidade Infraestrutura"
                                   class="form-control"
                                   value="@Model.Relato.UnidadeInfraestrutura.NomUnidadeÌnfraestrutura">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Data da ocorrência</label>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                <input readonly id="DtOcorrencia" name="DtOcorrencia"
                                       data-plugin-masked-input data-input-mask="99/99/9999"
                                       placeholder="eg.: Data da ocorrência de prevenção"
                                       class="form-control"
                                       value="@Model.Relato.DatOcorrencia">
                            </div>
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">Hora da Ocorrência</label>
                        <div class="col-lg-3 pull-left">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </span>
                                <input readonly type="text"
                                       id="HorOcorrencia" name="HorOcorrencia"
                                       data-plugin-timepicker class="form-control"
                                       data-plugin-options='{ "showMeridian": false }'
                                       placeholder="eg.: Horário da ocorrência"
                                       value="@Model.Relato.HorOcorrencia">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da Ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly type="text" rows="3"
                                      name="DscLocalOcorrenciaRelator"
                                      class="form-control"
                                      placeholder="eg.: Nome do Local da Ocorrência do relato  "
                                      required
                                      maxlength="200">@Model.Relato.DscLocalOcorrenciaRelator</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição da ocorrência/Nova descrição <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly
                                      name="DscEnvolvidosOcorrencia"
                                      type="text" rows="3"
                                      class="form-control"
                                      placeholder="eg.: Pessoas e / ou veículos envolvidos no relato"
                                      required
                                      maxlength="500">@Model.Relato.DscOcorrenciaRelator</textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <h4 class="pt-3 mb-0">Classificação</h4>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscLocal" name="DscLocal"
                                   placeholder="eg.: Local da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.Local.DscLocal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Local de ocorrência   <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscSubLocal" name="DscSubLocal"
                                   placeholder="eg.: Sub Local da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.SubLocal.DscSubLocal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Assunto <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsAssunto" name="DsAssunto"
                                   placeholder="eg.: Assunto da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.Assunto.DscAssunto">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Assunto<span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsSubAssunto" name="DsSubAssunto"
                                   placeholder="eg.: Sub Assunto da ocorrência"
                                   class="form-control"
                                   value="@Model.Relato.SubAssunto.DscSubAssunto">
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Empresa de atendimento<span class="required">*</span></label>
                        <select class="form-control populate select2" name="ddlEmpresa" id="ddlEmpresa"
                                title="Por favor selecione uma empresa." required
                                asp-for="CodEmpresa" asp-items="Model.ListEmpresa">
                            <option value="">Selecionar Empresa</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Responsável técnico<span class="required">*</span></label>
                        <div class="col-lg-7">
                            @{
                                var userRole = ((ClaimsIdentity)User.Identity).FindFirst(ClaimTypes.Role).Value;

                                var requirement = new UserInRoleRequirement(userRole);

                            }
                            @if ((await AuthorizationService.AuthorizeAsync(User, new string[] { UserRoles.Administrator, UserRoles.GestorSgsoSite }, requirement)).Succeeded)
                            {
                                <select class="form-control populate select2" name="ddlResponsavelTecnico" id="ddlResponsavelTecnico"
                                        title="Por favor selecione uma empresa." required multiple
                                        asp-for="CodResponsavel" asp-items="Model.ListResponsavel">
                                    <option value="">Selecionar Responsável técnico</option>
                                </select>
                            }
                            else
                            {
                                <select class="form-control populate select2" name="ddlResponsavelTecnico" id="ddlResponsavelTecnico"
                                        title="Por favor selecione uma empresa." required
                                        asp-for="CodResponsavel" asp-items="Model.ListResponsavel">
                                    <option value="">Selecionar Responsável técnico</option>
                                </select>
                            }

                        </div>
                        <div class="col-lg-2">
                            <a href="#" id="custom-icon-success" class="btn  btn-primary pull-left mr-2" v-on:click="AddResponsavel">Adicionar &nbsp;&nbsp;<i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <table id="datatable-default" class="table table-responsive-md table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>Empresa de atendimento</th>
                                        <th>Responsável técnico</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in @Model.ListResponsavelTecnico)
                                {
                                    <tr>
                                        <td>@item.CodEmpresa</td>
                                        <td>@item.NomUsuario</td>
                                        <td><a data-toggle="tooltip" data-placement="top" title="Excluir" asp-action="Delete" asp-controller="Local" asp-route-id="@item.CodUsuario" class="on-default remove-row" style='color: #d43f3a'><i class="fa fa-trash-o"></i></a></td>

                                    </tr>
                                }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Enviar &nbsp;&nbsp;<i class="fa fa-paper-plane"></i></button>
                            <a href="#" class="btn btn-danger pull-left mr-2">Sair &nbsp;&nbsp;<i class="fa fa-remove"></i></a>
                            @*<a href="@Url.Action("Index", "Relato")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>*@

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>
<div id="modalIcon" class="modal-block modal-header-color modal-block-danger mfp-hide">
    <section class="card">
        <header class="card-header">
            <h2 class="card-title">Exclusão</h2>
        </header>
        <div class="card-body">
            <div class="modal-wrapper">
                <div class="modal-icon">
                    <i class="fa fa-question-circle"></i>
                </div>
                <div class="modal-text">
                    <p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
                </div>
            </div>
        </div>
        <footer class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm">Sim &nbsp;&nbsp;<i class="fa fa-thumbs-o-up"></i></button>
                    <button class="btn btn-danger modal-dismiss">Não &nbsp;&nbsp;<i class="fa fa-thumbs-o-down"></i></button>
                </div>
            </div>
        </footer>
    </section>
</div>
