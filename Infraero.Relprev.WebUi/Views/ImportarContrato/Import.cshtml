
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Index", "ConfigurarAmbiente", FormMethod.Post))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Importar Contrato</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Contrato Nº</label>
                        <div class="col-lg-7">
                            <input type="text" name="fullname" class="form-control" placeholder="eg.: Número do contrato cadastrado no sistema SmartTream" maxlength="100" />
                        </div>

                        <button class="btn  btn-success pull-left mr-2">Pesquisar &nbsp;&nbsp;<i class="fa fa-search"></i></button>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Nome da Empresa<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Nome completo da empresa " maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Situação<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Situação atual do contrato " maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">CNPJ<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Número de inscrição no CNPJ da empresa " maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Habilitar Contrato</label>
                        <div class="col-lg-6">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="">
                                </label>
                            </div>

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <h4 class="pt-3 mb-0">Endereço</h4>

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Endereço (Rua, Av,Pça...)<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Endereço completo da empresa. " maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Complemento<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Descrição do complemento do endereço" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Bairro<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Descrição do bairro do endereço" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Cidade<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Descrição da cidade da empresa" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">UF<span class="required">*</span></label>
                        <div class="col-lg-3">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Unidade Federativa" maxlength="100" />
                        </div>

                        <label class="col-lg-3 control-label text-lg-right pt-2">CEP<span class="required">*</span></label>
                        <div class="col-lg-3">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Número do CEP do endereço" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Telefone<span class="required">*</span></label>
                        <div class="col-lg-3">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Número do telefone da empresa" maxlength="100" />
                        </div>

                        <label class="col-lg-3 control-label text-lg-right pt-2">Ramal<span class="required">*</span></label>
                        <div class="col-lg-3">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: Número do ramal" maxlength="100" />
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Email<span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input disabled type="text" name="fullname" class="form-control" placeholder="eg.: E-mail" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <table class="table table-responsive-md table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th colspan="4" class="text-center">Contatos</th>
                                    </tr>
                                    <tr>
                                        <th>Nome</th>
                                        <th>CPF</th>
                                        <th>E-mail </th>
                                        <th>Telefone</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Uriel</td>
                                        <td>987.235.145-85</td>
                                        <td>uriel@gmail.com</td>
                                        <td>(61)9987-5656</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                            <button type="reset" class="btn btn-danger pull-left mr-2">Cancelar &nbsp;&nbsp;<i class="fa fa-remove"></i></button>

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
    <script src="~/vendor/select2/js/select2.js"></script>

    <script>
        // Select2
        (function($) {

            'use strict';

            if ( $.isFunction($.fn[ 'select2' ]) ) {

                $(function() {
                    $('[data-plugin-selectTwo]').each(function() {
                        var $this = $( this ),
                            opts = {};

                        var pluginOptions = $this.data('plugin-options');
                        if (pluginOptions)
                            opts = pluginOptions;

                        $this.themePluginSelect2(opts);
                    });
                });

            }

        }).apply(this, [jQuery]);

    </script>
}



