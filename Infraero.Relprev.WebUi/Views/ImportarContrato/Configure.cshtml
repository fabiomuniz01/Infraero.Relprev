
@{
    ViewData["Title"] = "Configure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Configure", "ImportarContrato", FormMethod.Post))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Configurar Ambiente</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <h4 class="pt-3 mb-0">Configuração Inicial</h4>

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Nome do Usuário</label>
                        <div class="col-lg-3">
                            <input type="text" name="fullname" class="form-control" placeholder="eg.: Tempo que o técnico deve ter para responder um parecer técnico" maxlength="100" />
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">E-mail<span class="required">*</span></label>
                        <div class="col-lg-3 pull-left">
                            <input type="text" name="fullname" class="form-control" placeholder="eg.: Tempo de resposta do parecer técnico quando o mesmo é rejeitado e devolvido para complemento" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Login</label>
                        <div class="col-lg-3">
                            <div class="input-group input-group-icon">
                                <input name="username" type="text" class="form-control " />
                                <span class="input-group-addon">
                                    <span class="icon ">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">Senha<span class="required">*</span></label>
                        <div class="col-lg-3 pull-left">
                            <div class="input-group input-group-icon">
                                <input name="pwd" type="password" class="form-control " />
                                <span class="input-group-addon">
                                    <span class="icon ">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Logo da Empresa</label>
                        <div class="col-lg-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="input-append">
                                    <div class="uneditable-input">
                                        <i class="fa fa-file fileupload-exists"></i>
                                        <span class="fileupload-preview"></span>
                                    </div>
                                    <span class="btn btn-default btn-file">
                                        <span class="fileupload-exists">Alterar</span>
                                        <span class="fileupload-new">Selecione o arquivo</span>
                                        <input type="file" />
                                    </span>
                                    <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remover</a>
                                    <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Anexar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                            <button type="reset" class="btn btn-danger pull-left mr-2">Cancelar &nbsp;&nbsp;<i class="fa fa-remove"></i></button>

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/bootstrap-fileupload/bootstrap-fileupload.min.css" />

}
@section Scripts {
    <script src="~/vendor/select2/js/select2.js"></script>
    <script src="~/vendor/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>

    <script>
        // Select2
        (function ($) {

            'use strict';

            if ($.isFunction($.fn['select2'])) {

                $(function () {
                    $('[data-plugin-selectTwo]').each(function () {
                        var $this = $(this),
                            opts = {};

                        var pluginOptions = $this.data('plugin-options');
                        if (pluginOptions)
                            opts = pluginOptions;

                        $this.themePluginSelect2(opts);
                    });
                });

            }

        }).apply(this, [jQuery]);

    </script>
}



