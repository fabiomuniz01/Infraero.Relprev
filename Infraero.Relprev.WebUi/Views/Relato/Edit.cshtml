    <section class="card">
        <header class="card-header">
            <h2 class="card-title">Classificação do relato</h2>
        </header>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="inputEmail4">Local da ocorrência <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Sub Local de ocorrência   <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Assunto <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Sub Assunto<span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <footer class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm">Salvar&nbsp;&nbsp;<i class="fa fa-save"></i></button>
                    <button class="btn btn-danger modal-dismiss">Sair &nbsp;&nbsp;<i class="fa fa-remove"></i></button>
                </div>
            </div>
        </footer>
    </section>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
