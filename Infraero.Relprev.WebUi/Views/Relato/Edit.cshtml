
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        @using (@Html.BeginForm("Edit", "Relato", FormMethod.Post))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Classificar Relato</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Nº do relato </label>
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input readonly type="email" name="email" class="form-control" placeholder="eg.: Número identificador do relato" maxlength="100" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Unidade de infraestrutura <span class="required">*</span></label>
                        <div class="col-lg-9">
                            <select data-plugin-selectTwo class="form-control populate" disabled="disabled">
                                <option value="AK">Alaska</option>
                                <option value="HI">Hawaii</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Data da ocorrência</label>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                <input readonly id="date" data-plugin-masked-input data-input-mask="99/99/9999" placeholder="eg.: Data da ocorrência de prevenção" class="form-control">
                            </div>
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">Hora da Ocorrência</label>
                        <div class="col-lg-3 pull-left">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </span>
                                <input readonly type="text" data-plugin-timepicker class="form-control" data-plugin-options='{ "showMeridian": false }' placeholder="eg.: Horário da ocorrência">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da Ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly type="text" rows="3" name="fullname" class="form-control" placeholder="eg.: Nome do Local da Ocorrência do relato  " required maxlength="200"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Envolvidos na ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly type="text" rows="3" name="fullname" class="form-control" placeholder="eg.: Pessoas e / ou veículos envolvidos no relato" required maxlength="500"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição da ocorrência <span class="required">*</span></label>
                        <div class="col-sm-7">
                            <textarea readonly type="text" rows="3" name="fullname" class="form-control" placeholder="eg.: Descrição da ocorrência do relato" required maxlength="1000"></textarea>
                        </div>
                        <div class="col-sm-2">
                            <button type="reset" class="btn btn-warning pull-left mr-2">Nova Descrição &nbsp;&nbsp;<i class="fa fa-pencil"></i></button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <table class="table table-responsive-md table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th colspan="4" class="text-center">Nome dos arquivos anexo</th>
                                    </tr>
                                    <tr>
                                        <th>Arquivo</th>
                                        <th>Responsável</th>
                                        <th>Fase do anexo</th>
                                        <th>Data e hora</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>atendimento.png</td>
                                        <td>Uriel</td>
                                        <td>Parecer técnico</td>
                                        <td>05/12/2019 10:00</td>
                                    </tr>
                                    <tr>
                                        <td>relato.png</td>
                                        <td>Miguel</td>
                                        <td>Parecer técnico</td>
                                        <td>01/12/2019 18:00</td>
                                    </tr>
                                    <tr>
                                        <td>atendimento.png</td>
                                        <td>Maria Flor</td>
                                        <td>Parecer técnico</td>
                                        <td>05/12/2019 08:00</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Classificação do relato <span class="required">*</span></label>
                        <div class="col-sm-7">
                            <a href="#modalIcon" class="modal-basic mb-1 mt-1 mr-1 btn btn-primary"><i class="fa fa-plus"></i> </a>
                        </div>

                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                            <button type="reset" class="btn btn-danger pull-left mr-2">Cancelar &nbsp;&nbsp;<i class="fa fa-remove"></i></button>
                            @*<a href="@Url.Action("Index", "Relato")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>*@

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>
<!-- Modal Form -->
<div id="modalIcon" class="modal-block modal-block-primary mfp-hide">
    <section class="card">
        <header class="card-header">
            <h2 class="card-title">Classificação do relato</h2>
        </header>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="inputEmail4">Local da ocorrência <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Sub Local de ocorrência   <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Assunto <span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail4">Sub Assunto<span class="required">*</span></label>
                    <div class="col-lg-12">
                        <select data-plugin-selectTwo class="form-control populate">
                            <option value="AK">Alaska</option>
                            <option value="HI">Hawaii</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <footer class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm">Salvar&nbsp;&nbsp;<i class="fa fa-save"></i></button>
                    <button class="btn btn-danger modal-dismiss">Sair &nbsp;&nbsp;<i class="fa fa-remove"></i></button>
                </div>
            </div>
        </footer>
    </section>
</div>
