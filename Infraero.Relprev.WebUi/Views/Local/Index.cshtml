@model Infraero.Relprev.Application.Local.Queries.GetLocals.GridLocal
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <form id="form1" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Pesquisar Local da Ocorrência</h2>
                </header>
                <div class="card-body">
                    <div class="form-group row">

                        <div class="col-sm-12 pull-right">

                            <a href="@Url.Action("Create", "Local")" id="addToTable" class="btn btn-primary pull-right">Novo  Local  <i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th class="text-center">Unidade de atendimento</th>
                                <th class="text-center">Local de ocorrência</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.aaData)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.DscUnidade)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DscLocal)</td>
                                    <td class="actions">
                                        <a data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-controller="Local" asp-route-id="@item.CodLocal" class="on-default edit-row" style='color: #eea236'><i class="fa fa-pencil"></i></a>
                                        <a data-toggle="tooltip" data-placement="top" title="Excluir"asp-action="Delete" asp-controller="Local" asp-route-id="@item.CodLocal"  class="on-default remove-row" style='color: #d43f3a'><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </section>
        </form>
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
    <script src="~/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/formatTable.js"></script>

    <script>
        // Tooltip
        (function ($) {

            'use strict';
            var crud = @ViewBag.CrudMessage;

            if (crud===1) {
                new PNotify({
                    title: 'Local',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            }else if (crud === 2) {
                new PNotify({
                    title: 'Local',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            }else if (crud === 3) {
                new PNotify({
                    title: 'Local',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify===0) {
                new PNotify({
                    title: 'Local',
                    text: messagem,
                    type: 'success'
                });
            }else if (notify === 1) {
                new PNotify({
                    title: 'Local',
                    text: messagem,
                    type: 'warning'
                });
            }else if (notify === 2) {
                new PNotify({
                    title: 'Local',
                    text: messagem,
                    type: 'error'
                });
            }
            if ($.isFunction($.fn['tooltip'])) {
                $('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
            }

        }).apply(this, [jQuery]);
        
    </script>
}


