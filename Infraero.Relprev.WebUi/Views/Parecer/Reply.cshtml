@model Infraero.Relprev.CrossCutting.Models.RelatoModel
@{
    ViewData["Title"] = "Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">

    <div class="col-lg-12">
        @using (@Html.BeginForm("Edit", "Relato", FormMethod.Post, new { id = "form", enctype = "multipart/form-data" }))
        {
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Responder Parecer Técnico</h2>

                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-sm-right pt-2">Nº do relato </label>
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input type="hidden" id="CodRelato" name="CodRelato"  required title="Por favor informe o Nº do relato">

                                <input readonly id="CodNumRelato" name="CodNumRelato"  class="form-control" placeholder="eg.: Número identificador do relato" maxlength="12" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Unidade de infraestrutura <span class="required">*</span></label>
                        <div class="col-lg-9">
                            <input readonly id="DscUnidadeInfraestrutura" name="DscUnidadeInfraestrutura"
                                   placeholder="eg.: Unidade Infraestrutura"
                                   class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2">Data da ocorrência</label>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                <input readonly id="DtOcorrencia" name="DtOcorrencia"
                                       data-plugin-masked-input data-input-mask="99/99/9999"
                                       placeholder="eg.: Data da ocorrência de prevenção"
                                       class="form-control"
                                       required title="Por favor informe o Data da ocorrência">
                            </div>
                        </div>

                        <label class="col-lg-2 control-label text-lg-right pt-2">Hora da Ocorrência</label>
                        <div class="col-lg-3 pull-left">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </span>
                                <input readonly type="text"
                                       id="HorOcorrencia" name="HorOcorrencia"
                                       data-plugin-timepicker class="form-control"
                                       data-plugin-options='{ "showMeridian": false }'
                                       placeholder="eg.: Horário da ocorrência"
                                       required title="Por favor informe o Hora da Ocorrência">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da Ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea readonly type="text" rows="3"
                                      name="DscLocalOcorrenciaRelator"
                                      class="form-control"
                                      placeholder="eg.: Nome do Local da Ocorrência do relato  "
                                       required title="Por favor informe o Local da Ocorrência"
                                      maxlength="200">

</textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <h4 class="pt-3 mb-0">Classificação</h4>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Local da ocorrência <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscLocal" name="DscLocal"
                                   placeholder="eg.: Local da ocorrência"
                                   class="form-control" required title="Por favor informe o Local da ocorrência"
                                   >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Local de ocorrência   <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DscSubLocal" name="DscSubLocal"
                                   placeholder="eg.: Sub Local da ocorrência"
                                   class="form-control" required title="Por favor informe o Sub Local de ocorrência"
                                   >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Assunto <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsAssunto" name="DsAssunto"
                                   placeholder="eg.: Assunto da ocorrência"
                                   class="form-control" required title="Por favor informe o Assunto"
                                   >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Sub Assunto<span class="required">*</span></label>
                        <div class="col-sm-9">
                            <input readonly id="DsAssunto" name="DsAssunto"
                                   placeholder="eg.: Assunto da ocorrência"
                                   class="form-control" required title="Por favor informe o Sub Assunto"
                                   >
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição do parecer técnico <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <div class="toggle toggle-primary" data-plugin-toggle>

                                <section class="toggle">
                                    <label>&nbsp;</label>
                                    <div class="toggle-content">
                                        <div class="form-group row">
                                            <label class="col-sm-3 control-label text-sm-right pt-2">Descrição do parecer técnico <span class="required">*</span></label>
                                            <div class="col-sm-9">
                                                <textarea type="text" rows="3" name="fullname" required title="Por favor informe o Descrição do parecer técnico" class="form-control" placeholder="eg.: Descrição do parecer técnico " required maxlength="500"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 control-label text-sm-right pt-2">Motivo da devolução do parecer <span class="required">*</span></label>
                                            <div class="col-sm-9">
                                                <textarea type="text" rows="3" name="fullname" required title="Por favor informe o Motivo da devolução do parecer" class="form-control" placeholder="eg.: Descrição do motivo da devolução do parecer técnico" required maxlength="500"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 control-label text-sm-right pt-2">Responsável técnico<span class="required">*</span></label>
                                            <div class="col-sm-9">
                                                <input type="text" name="fullname" required title="Por favor informe o Responsável técnico" class="form-control" placeholder="eg.: Nome do responsável técnico do parecer" required maxlength="500" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-3 control-label text-lg-right pt-2">Status do parecer<span class="required">*</span></label>
                                            <div class="col-sm-3">
                                                <input type="text" name="fullname" required title="Por favor informe o Status do parecer" class="form-control" placeholder="eg.: Status de andamento do parcer técnico" required maxlength="500" />
                                            </div>

                                            <label class="col-lg-2 control-label text-lg-right pt-2">Data/Hora  <span class="required">*</span></label>
                                            <div class="col-lg-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    <input readonly id="date" required title="Por favor informe o Data/Hora " data-plugin-masked-input data-input-mask="99/99/9999" placeholder="eg.: Data e hora de criação do parecer técnico" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição do relato da Classificação <span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea type="text" rows="3" name="fullname" required title="Por favor informe o Descrição do relato da Classificação" class="form-control" placeholder="eg.: Descrição do relato da Classificação" required maxlength="500"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label text-sm-right pt-2">Descrição do parecer<span class="required">*</span></label>
                        <div class="col-sm-9">
                            <textarea type="text" rows="3" name="fullname" required title="Por favor informe o Descrição do parecer" class="form-control" placeholder="eg.: Descrição do parecer técnico" required maxlength="500"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ListArquivo" class="col-sm-3 control-label text-sm-right pt-2">Arquivos</label>
                        <div class="col-sm-9">
                            <input multiple="" asp-for="ListArquivo" id="custom-file-input">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-right pt-2"></label>
                        <div class="col-sm-9">
                            <table id="arquivosDatatable" class="table table-responsive-md table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>Arquivo</th>
                                        <th>Ação</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <button class="btn  btn-success pull-left mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>
                            <a href="#" class="btn btn-danger pull-left mr-2">Sair &nbsp;&nbsp;<i class="fa fa-remove"></i></a>
                            @*<a href="@Url.Action("Index", "Relato")" class="btn btn-dark pull-left">Voltar &nbsp;&nbsp;<i class="fa fa-reply"></i></a>*@

                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>

@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
    <link href="~/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/bootstrap-timepicker/css/bootstrap-timepicker.css" />
}
@section Scripts {
    <script src="~/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/vendor/bootstrap-datepicker/locales/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/vendor/jquery-mask/jquery.mask.js"></script>
    <script src="~/vendor/select2/js/select2.js"></script>
    <script src="~/vendor/bootstrap-timepicker/bootstrap-timepicker.js"></script>
    <script src="~/js/relato.js"></script>

}





