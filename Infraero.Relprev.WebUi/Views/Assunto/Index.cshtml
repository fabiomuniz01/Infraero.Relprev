@model Infraero.Relprev.Application.Assunto.Queries.GetAssuntos.GridAssunto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <form id="form1" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Pesquisar assuntos relacionados a ocorrências</h2>
                </header>
                <div class="card-body">
                    <div class="form-group row">

                        <div class="col-sm-12 pull-right">

                            <a href="@Url.Action("Create", "Assunto")" id="addToTable" class="btn btn-primary pull-right">Nova Assunto &nbsp;<i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th class="text-center">Assunto</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.aaData)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DscAssunto)</td>
                                <td class="actions">
                                    <a data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-controller="Assunto" asp-route-id="@item.CodAssunto" class="on-default edit-row" style='color: #eea236'><i class="fa fa-pencil"></i></a>
                                    <a data-toggle="tooltip" data-placement="top" title="Excluir" asp-action="Delete" asp-controller="Assunto" asp-route-id="@item.CodAssunto" class="on-default remove-row" style='color: #d43f3a'><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        }

                        </tbody>
                    </table>
                </div>
            </section>
        </form>
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
    <script src="~/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
