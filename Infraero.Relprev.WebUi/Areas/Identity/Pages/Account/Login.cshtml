@page
@model LoginModel

@{
    Layout = "_LoginLayout";
}

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo float-left" style="margin-top: 15px;">
            <img src="~/img/logo.png" height="54" alt="Infraero" />
        </a>

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-right">
                <h2 class="title text-uppercase font-weight-bold m-0"><i class="fa fa-user mr-1"></i> Acesso ao Sistema</h2>
            </div>
            <div class="card-body">
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl" autocomplete="off" id="form">
                    @if (Request.HasFormContentType && Request.Form.Keys.Contains("login"))
                    {
                        <div asp-validation-summary="All" class="alert alert-mini alert-danger margin-bottom-30"></div>
                    }
                    <div class="form-group mb-3">
                        <label>Usuário</label>
                        <div class="input-group input-group-icon">
                            <input asp-for="Login.Email" type="text" class="form-control form-control-lg"  value="ntitsolutions01@gmail.com"/>
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="clearfix">
                            <label class="float-left">Senha</label>
                            <a asp-page="./ForgotPassword" class="float-right">Recuperar Senha</a>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Login.Password" type="password" class="form-control form-control-lg" value="12345678"/>
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                        </div>
                        <div class="col-sm-4 text-right">
                            <button type="submit" asp-page-handler="Login" name="login" class="btn btn-primary mt-2">Entrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2020. Todos os direitos reservados.</p>
    </div>
</section>

@section Scripts {
    <script src="~/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
}