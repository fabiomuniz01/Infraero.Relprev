@page
@model FirstAccessPasswordModel
@{
    ViewData["Title"] = "Primeiro acesso";
    Layout = "_LoginLayout";
}

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo float-left" style="margin-top: 15px;">
            <img src="~/img/logo.png" height="54" alt="Porto Admin" />
        </a>

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-right">
                <h2 class="title text-uppercase font-weight-bold m-0"><i class="fa fa-user mr-1"></i> Primeiro acesso.</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <p class="m-0">Seja bem vindo ao sistema relprev! Para utilizar o sistema configure sua nova senha de acesso abaixo!</p>
                </div>
                <div class="alert alert-success">
                    <p class="m-0">Após alterar sua senha acesse o sistema relprev com seu usuário e senha!</p>
                </div>
                <form method="post" autocomplete="off" id="form">
                    @if (Request.HasFormContentType)
                    {
                        <div asp-validation-summary="All" class="alert alert-mini alert-danger margin-bottom-30"></div>
                    }
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group mb-3">
                        <label>Email</label>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.Email" type="text" class="form-control form-control-lg" readonly="readonly" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="clearfix">
                            <label class="float-left">Nova Senha</label>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.Password" type="password" class="form-control form-control-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="clearfix">
                            <label class="float-left">Confirmar Senha</label>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg " />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-sm-12 text-right">
                            <a class="btn btn-danger pull-right mr-2" asp-page="./Login">Sair &nbsp;&nbsp;<i class="fa fa-reply"></i></a>
                            <button type="submit" class="btn btn-success pull-right mr-2">Salvar &nbsp;&nbsp;<i class="fa fa-save"></i></button>

                        </div>
                    </div>

                </form>
            </div>

        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2020. Todos os direitos reservados.</p>
    </div>
</section>


@section Scripts {
    <script src="~/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
}